{{ define "bookteasers" }}
  <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-6 gap-0 bg-purple-700 bg-opacity-50 pt-5 shadow-inner rounded-t-lg">
      {{ range . }}
          <div class="border-b-8 border-gray-600 pr-2 pl-2 text-center pt-3 bottom-0">
            {{ template "bookteaser" . }}
          </div>
      {{ end }}
  </div>
{{ end }}